-- Minimum width and alignment can be specified
SELECT format('%(name)-12L is %(type)L', hstore(ARRAY[
    'name', 'Melanie', 'type', 'cool']));
         format         
------------------------
 'Melanie'    is 'cool'
(1 row)

SELECT format('%(name)12L is %(type)L', hstore(ARRAY[
    'name', 'Melanie', 'type', 'cool']));
         format         
------------------------
    'Melanie' is 'cool'
(1 row)

SELECT format('%(name)-12L is %(type)8L', hstore(ARRAY[
    'name', 'Melanie', 'type', 'cool']));
          format          
--------------------------
 'Melanie'    is   'cool'
(1 row)

